<div class="flex justify-center w-full">
    <%= form_with model: @recipe_food, url: recipe_recipe_food_path(@recipe_food), method: :patch do |f| %>
        <h1 class="text-center text-lg mb-4"> <%= @recipe_food.food.name %></h1>
        <div class="text-center">
            <%= f.label :quantity %>
            <%= f.number_field :quantity, placeholder: 'New Quantity', class: "w-full p-2 border-solid border-black border-2 mt-1", min: 0 %>
        </div>
        <div>
            <%= f.submit 'Edit', class:"p-2 border-solid border-black border-2 w-full mt-5 cursor-pointer" %>
        </div>
    <% end %>
</div>